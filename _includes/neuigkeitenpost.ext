<div class="news">
	<div class="inside">
		<header>{{post.title}}</header>
		{% if post.image %}
			<figure>
				<img src="/img/neuigkeiten/{{post.image}}">
			</figure>
		{% endif %}
		<article>
			{{ post.content | newline_to_br | markdownify | replace: "<slide />", "</section><section>" }}
		</article>
	</div>
	<div class="clearfix"></div>
</div>
